html, body 
    background-color #2e2e2e
    color white
    padding 0
    margin 0
    font-size 18px
    // font-family: 'Novecentosanscondensed-DemiBold'
    font-family 'Source Sans Pro', sans-serif
    font-weight 200
    height 2000px

header
    position fixed
    top 10px
    left 14px
    font-size 36px
    color #aaa
    transition transform 200ms ease-in-out, color 200ms ease-in-out
    whitespace nowrap
    font-weight 600
    &.active
        color black

a, a:visited
    color #666
    text-decoration none
    transition color 200ms ease-in-out
    &:hover
        color #444
    &.sel
        color #EFAE7A
        cursor default

#menu_icon
    position fixed
    top 7px
    right 5px
    color #aaa
    font-size 25px
    display none
    transition all 200ms ease-in-out
    cursor pointer
    &:hover
        color #aaa
    &.active
        color black


#menu
    position fixed
    top 25px
    right 0
    font-size 20px
    transition height 300ms ease-in-out, opacity 300ms ease-in-out
    ul
        list-style-type none
        padding 0px
        margin 0px
        li
            display inline
            padding 0px 30px 0px 0px
            transition padding 200ms ease-in-out
            &:last-child 
                padding 0px 17px 0px 0px

.topic_heading
    background linear-gradient(top, #181818, black)
    border-top 1px solid #111
    border-bottom 1px solid #333
    // background-color #111
    color #EFAE7A
    position fixed
    top 62px
    left 0px
    right 0px
    height 36px
    font-size 22px
    padding 4px 0px 0px 15px
    font-weight 400
    transition all 200ms ease-in-out

.responsiveState
    display none
    height 1px

