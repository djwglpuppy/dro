@media only screen and (max-width: 768px)
    .responsiveState
        height 2px

    // header
    //     transform scale(.9) translate(-17px, 1px)

    #menu
        font-size 16px
        top 29px
        ul
            li
                padding-right 10px

    .topic_heading
        top 62px
    

@media only screen and (max-width: 600px)
    .responsiveState
        height 3px

    #menu
        z-index 1000
        background linear-gradient(top, #181818, black)
        border-top 1px solid #111
        border-bottom 1px solid #333
        padding 0px 15px
        font-size 28px
        left 0px
        right 0px
        top 46px
        font-weight 200
        opacity 0
        height 0px
        overflow hidden
        ul
            margin 0px
            padding 10px 0px
            li
                padding-right 0px
                padding-bottom 15px
                display block
        &.active
            opacity 1
            height 212px
            display block


    header
        transform scale(.8) translate(-36px, -11px)

    #menu_icon
        display block

    .topic_heading
        top 46px
        font-size 18px
        height 30px
        padding-top 5px

